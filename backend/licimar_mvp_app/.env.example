# Configurações de Ambiente para o Backend (Flask)

# Chave Secreta para segurança (MUDE EM PRODUÇÃO)
SECRET_KEY=sua_chave_secreta_aqui_mude_em_producao

# Configuração do Banco de Dados (SQLite)
# O arquivo do banco de dados será criado na pasta 'instance' do contêiner
DATABASE_URL=sqlite:///instance/licimar.db

# Configuração de Ambiente (development ou production)
FLASK_ENV=development

# Origens permitidas para CORS (separe por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/licimar.log

# Configurações de upload
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
